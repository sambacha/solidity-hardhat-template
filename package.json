{
  "name": "solidity-hardhat-template",
  "private": true,
  "version": "1.6.0",
  "description": "typescript hardhat base with conformant linting",
  "files": [
    "/dist/**/*",
    "/contracts",
    "/contracts/base",
    "/contracts/interfaces",
    "/contracts/libraries",
    "/artifacts/contracts/**/*.json",
    "!artifacts/contracts/**/*.dbg.json",
    "!artifacts/contracts/test/**/*",
    "!artifacts/contracts/base/**/*"
  ],
  "scripts": {
    "build": "npm run-script compile",
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage",
    "test": "npx hardhat test",
    "lint": "npx gts lint",
    "fmt": "npx prettier --config prettier.config.js --write contracts/",
    "clean": "npx gts clean",
    "fix": "npx gts fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sambacha/solidity-hardhat-template.git"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart contracts",
    "defi"
  ],
  "author": "SEE CONTRIBUTORS",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/sambacha/solidity-hardhat-template/issues"
  },
  "homepage": "https://github.com/sambacha/solidity-hardhat-template#readme",
  "dependencies": {},
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@openzeppelin/contracts": "4.5.0",
    "@tenderly/hardhat-tenderly": "^1.0.12",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.0",
    "@types/node": "^16",
    "codecov": "^3.8.3",
    "dotenv": "^16.0.0",
    "ethers": "^5.6.1",
    "hardhat": "2.12.0",
    "lodash": "^4.17.21",
    "prettier": "^2.6.2",
    "prettier-config-solidity": "latest",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "ts-node": "^10.8.0",
    "tslib": "^2.4.0",
    "typechain": "^8.1.0",
    "tsup": "^6.2.3",
    "typescript": "^4.7.4",
    "wireit": "^0.7.1"
  },
  "wireit": {
    "dev": {
      "command": "vite",
      "files": [
        "src/**/*.{ts,tsx,svg,css}",
        "tsconfig.json",
        "vite.config.ts"
      ],
      "packageLocks": [
        "package-lock.json"
      ]
    },
    "build": {
      "command": "tsc && vite build",
      "files": [
        "src/**/*.{ts,tsx,svg,css}",
        "tsconfig.json",
        "vite.config.ts"
      ],
      "output": [
        "dist/**"
      ],
      "packageLocks": [
        "package-lock.json"
      ]
    }
  }
}
